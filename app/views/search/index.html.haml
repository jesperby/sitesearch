%section.site-search.body-copy
  .search-and-results
    %h1= "Sök på malmo.se"
    = render "form"
    - if @error
      .error= "Ett fel inträffade (#{@error})"
    - else
      = render "summary"
      = render "sorting"
      = render "suggestions"

      %section.results
        %ul
          = render "editors_choice"
          = render "results"

  %section.categories#filter
    = render "categories" unless @error
