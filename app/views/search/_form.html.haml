= form_tag(search_path, method: "get", id: "full-search") do
  %fieldset
    = label_tag "q", "#{h1} ", class: "control-label"
    .input-append
      = text_field_tag :q, @terms, { placeholder: "Ange ett eller flera sökord",
        "data-autocomplete-url" => search_autocomplete_path,
        "data-images-url" => "#{root_path}assets/" }
      = submit_tag "Sök", { class: "btn", name: nil }
