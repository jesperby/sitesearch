- title "Rekommendationer"
%section.box.index
  %h1.box-title= h1
  .box-content.body-copy
    .table-wrapper
    %table.full
      %thead
        %tr
          %th Namn
          %th.terms Sökord
          %th.delete
      %tbody
        - @recommendations.each do |recommendation|
          %tr
            %td= link_to recommendation.name, edit_recommendation_path(recommendation)
            %td.terms= recommendation.terms.map(&:name).join(", ")
            %td.delete
              %a.btn.btn-danger.btn-xs{ href: recommendation, data: { confirm: 'Är du säker?', method: :delete }}
                %span.m-icon-remove-0
                = "Radera"

        %tr
          %td{ colspan: 3 }
            .actions= link_to "Lägg till", new_recommendation_path, class: "btn btn-default"
